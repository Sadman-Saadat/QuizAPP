<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz_options">

    <RadioButton
        android:id="@+id/option_1"
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:background="@color/colorPrimary"
        android:text="@string/Option_1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <RadioButton
        android:id="@+id/optionn_4"
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:background="@color/colorPrimary"
        android:text="@string/option_4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

    <RadioButton
        android:id="@+id/option_3"
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:background="@color/colorPrimary"
        android:text="@string/option3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.531" />

    <RadioButton
        android:id="@+id/option_2"
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:background="@color/colorPrimary"
        android:text="@string/option_2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.453" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="251dp"
        android:layout_height="56dp"
        android:backgroundTint="#317F39"
        android:text="@string/submit_quiz"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <Button
        android:id="@+id/skip_btn"
        android:layout_width="251dp"
        android:layout_height="56dp"
        android:backgroundTint="#A51919"
        android:shadowColor="#2D2F31"
        android:text="@string/skip_the_question"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit_btn"
        app:layout_constraintVertical_bias="0.102" />

    <TextView
        android:id="@+id/question_textVIew"
        android:layout_width="308dp"
        android:layout_height="42dp"
        android:fontFamily="sans-serif"

        android:text="@string/question_1"
        android:textColor="@color/colorPrimaryDark"
        android:textFontWeight="@android:integer/config_shortAnimTime"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />

    <ticker.views.com.ticker.widgets.circular.timer.view.CircularView
        android:id="@+id/circular_view"
        android:layout_width="116dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toTopOf="@+id/question_textVIew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381"
        app:m_arc_stroke_color="@android:color/white"
        app:m_cicle_stroke_width="14"
        app:m_circle_radius="25"
        app:m_circle_stroke_color="@color/colorPrimary" />


</androidx.constraintlayout.widget.ConstraintLayout>